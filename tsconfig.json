{
  "compilerOptions": {
    "outDir": "./dist/esm",
    "rootDir": "./src",
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
