{
  "compilerOptions": {
    "lib": ["es2017"],
    "outDir": "dist",
    "rootDir": "src",
    "target": "es5",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "*.test.ts"]
}
